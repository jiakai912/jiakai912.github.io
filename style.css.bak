:root {
  --max-width: 1280px;
  --brand: #FFE8D0;
  --bg: #faf7f2;
  --text: #222;
  --muted: #000000;
  --card: #ffffff;
  --radius: 14px;
}

/* 全局 */
* { box-sizing: border-box; margin: 0; padding: 0; }
body { font-family: "Noto Sans TC", system-ui; background: var(--bg); color: var(--text); line-height: 1.6; }
.container { max-width: var(--max-width); margin: 0 auto; padding: 0 20px; }

/* NAVBAR */
header { background: var(--brand); padding: 12px 0; }
nav { display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; }
nav .left { display: flex; align-items: center; gap: 12px; font-weight: 700; font-size: 20px; }
nav ul { display: flex; gap: 28px; list-style: none; }
nav a { text-decoration: none; color: var(--text); }
nav a.active { color: #b45c2e; font-weight: 700; }

/* HERO */
.hero {
  background: #FFE8D0;
  border-radius: var(--radius);
  padding: 40px;
  display: flex;
  align-items: center;
  gap: 40px;
  margin: 40px 0;
  flex-wrap: wrap;
}
.hero-text { flex: 1; min-width: 280px; }
.hero-text h2 { margin-bottom: 16px; font-size: 32px; }
.hero-text p { margin-bottom: 24px; color: var(--muted); }
.btn-row { display: flex; gap: 16px; flex-wrap: wrap; }
.btn { padding: 10px 22px; border-radius: 8px; border: none; cursor: pointer; font-size: 15px; }
.btn-primary { background: #000; color: #fff; }
.btn-light { background: #fff; border: 1px solid #ccc; }
.hero-img img { width: 100%; max-width: 400px; border-radius: var(--radius); display: block; }

/* Section Title */
h3.section-title { font-size: 26px; margin: 50px 0 20px 0; text-align: center; }

/* GRID & CARDS */
.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 24px;
}

.card {
  background: var(--card);
  border-radius: var(--radius);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: transform 0.3s;
}
.card:hover { transform: translateY(-5px); }

.card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  display: block;
}

.card h4 { margin: 12px; font-size: 18px; }
.card p { margin: 0 12px 12px 12px; color: var(--muted); font-size: 14px; line-height: 1.5; }

/* More Button */
.more-btn {
  margin: 12px;
  align-self: flex-end;
  padding: 8px 16px;
  background: #000;
  color: #fff;
  border-radius: 8px;
  font-size: 14px;
  text-decoration: none;
}

/* CONTACT */
.contact {
  text-align: center;
  font-size: 24px;
  padding: 50px 20px;
}
.contact p { color: var(--muted); margin-top: 12px; }
.contact .contact-btn {
  margin-top: 18px;
  background: #000;
  color: #fff;
  border-radius: 8px;
  padding: 14px 28px;
  display: inline-block;
  font-size: 16px;
  text-decoration: none;
}

/* FOOTER */
.footer3 {
  background: linear-gradient(135deg, #FFE8D0, #FFDAB3);
  color: #222;
  padding: 60px 20px 40px 20px;
  font-family: "Noto Sans TC", system-ui;
  border-radius: 14px 14px 0 0;
}

.footer-container {
  display: flex;
  flex-direction: column;
  gap: 50px;
}

.footer-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 40px;
  flex-wrap: wrap;
}

.footer-col {
  flex: 1 1 220px;
  min-width: 220px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

/* 品牌 */
.footer-brand h3 {
  font-size: 26px;
  margin-bottom: 8px;
}

.footer-brand p {
  font-size: 14px;
  color: #444;
  line-height: 1.7;
}

/* 快速連結 */
.footer-links h4 {
  font-size: 26px;
}

.footer-links-row {
  display: flex;
  gap: 25px;
  flex-wrap: wrap;
}

.footer-links-row a {
  color: #222;
  text-decoration: none;
  font-size: 14px;
  font-weight: 500;
  transition: color 0.3s, transform 0.3s;
}

.footer-links-row a:hover {
  color: #b45c2e;
  transform: translateY(-2px);
}

/* 社群 */
.footer-social h4 {
  font-size: 26px;
}

.footer-social .social-icons {
  display: flex;
  gap: 20px;
}

.footer-social .social-icons a {
  display: inline-block;
  transition: transform 0.3s, filter 0.3s;
}

.footer-social .social-icons img {
  width: 36px;
  height: 36px;
  border-radius: 50%;
}

.footer-social .social-icons a:hover {
  transform: translateY(-5px) scale(1.2);
  filter: drop-shadow(0 2px 4px rgba(0,0,0,0.2));
}

/* 底部資訊 */
.footer-bottom {
  display: flex;
  justify-content: center;
  gap: 40px;
  font-size: 14px;
  color: #444;
  flex-wrap: wrap;
  border-top: 1px solid rgba(0,0,0,0.1);
  padding-top: 25px;
}

/* 響應式 */
@media (max-width: 880px) {
  .footer-top {
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 30px;
  }

  .footer-col {
    max-width: 300px;
  }

  .footer-links-row {
    justify-content: center;
  }
}



  
